<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductosMVVM.Views.EditarProductoPage"
             Title="EditarProductoPage">
    <VerticalStackLayout>
        <TableView>
            <TableRoot>
                <TableSection Title="Ingrese los datos para un nuevo producto">
                    <EntryCell Text="{Binding Nombre}"
                       Placeholder="Nombre"/>
                    <EntryCell Text="{Binding Cantidad}"                
                       Placeholder="Cantidad"
                       Keyboard="Numeric"/>
                    <EntryCell Text="{Binding Descripcion}"   
                       Placeholder="Descripcion"/>

                </TableSection>
            </TableRoot>
        </TableView>
        <Button Text="Editar Producto"
        Command="{Binding EditarProducto}"
        />
    </VerticalStackLayout>
</ContentPage>