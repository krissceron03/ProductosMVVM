<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductosMVVM.Views.DetalleProductoPage"
             Title="DetalleProductoPage">
    <VerticalStackLayout>
        <Image Source="dotnet_bot.png"
                HorizontalOptions="Center"
                HeightRequest="200"/>

        <Label x:Name="nombre"
                Text="{Binding Nombre}"
                FontSize="32"
                HorizontalOptions="Center"/>

        <StackLayout Orientation="Horizontal">
            <Label Text="Cantidad: "
                    FontSize="18"/>
            <Label x:Name="cantidad"
                    Text="{Binding Cantidad}"
                    FontSize="18"/>
        </StackLayout>

        <StackLayout Orientation="Horizontal">
            <Label Text="DecripciÃ³n: "
                    FontSize="18"/>
            <Label x:Name="descripcion"
                    Text="{Binding Descripcion}"
                    FontSize="18"/>
        </StackLayout>
        
        
        <StackLayout Orientation="Horizontal">
            <Button Text="Borrar"
                    Command="{Binding OnClickBorrar}"
                    FontSize="20"
                    Margin="5"
                    HorizontalOptions="FillAndExpand"
                    BackgroundColor="Red"/>
            
            <Button Text="Editar"
                    Command="{Binding OnClickEditar}"
                    FontSize="20"
                    Margin="5"
                    HorizontalOptions="FillAndExpand"
                    TextColor="Black"
                    BackgroundColor="Orange"/>
        </StackLayout>

    </VerticalStackLayout>
</ContentPage>